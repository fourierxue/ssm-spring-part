<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--1.0单个构造参数注入
    spring容器会先创建对象ioc，在赋值di，因此userDao声明可以放在userService下面-->
    <bean id="userDao" class="com.xd.ioc_02.UserDao"/>
    <bean id="userService" class="com.xd.ioc_02.UserService">
        <!-- 构造参数传值的di
        value 直接属性值
        ref 引用其他bean，bean的id值-->
        <constructor-arg ref="userDao"/>
    </bean>

    <!--2.0多个构造参数注入-->
    <bean id="userService1" class="com.xd.ioc_02.UserService">
        <!-- 方案1 按照构造参数的顺序填写值，不推荐-->
        <constructor-arg value="18"/>
        <constructor-arg value="大壮"/>
        <constructor-arg ref="userDao"/>
    </bean>
    <bean id="userService2" class="com.xd.ioc_02.UserService">
        <!-- 方案2 按照构造参数的名称填写值，不用考虑顺序，推荐-->
        <constructor-arg name="age" value="18"/>
        <constructor-arg name="name" value="大壮"/>
        <constructor-arg name="userDao" ref="userDao"/>
    </bean>
    <bean id="userService3" class="com.xd.ioc_02.UserService">
        <!-- 方案3 按照构造参数的index填写值，从左到右，从0开始，不用考虑顺序-->
        <constructor-arg index="0" value="18"/>
        <constructor-arg index="1" value="大壮"/>
        <constructor-arg index="2" ref="userDao"/>
    </bean>
    <!-- 3.0 setter方法注入-->
    <bean id="movieFinder" class="com.xd.ioc_02.MovieFinder"/>
    <bean id="simpleMovieListener" class="com.xd.ioc_02.SimpleMovieListener">
        <!-- name setter方法去掉set之后首字母小写-->
        <property name="movieName" value="rush hour"/>
        <property name="movieFinder" ref="movieFinder"/>
    </bean>
</beans>